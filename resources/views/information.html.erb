<%
meta title: @page.title
%>
<div class="row-fluid clearfix">


	<div class="page-title">
		<h1 class="text-center"><%=@page.title %></h1>

	</div>
	
</div>
<main class="main">
	<div class="hidden-print text-right">
						<div class="btn-group">
	<%=link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Zurück'.html_safe,:back, class: "btn btn-primary"%>
	<% if can? :manage, :all %>
<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Bearbeiten'.html_safe, edit_page_path(@page), class: "btn btn-primary" %>
 <%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Löschen'.html_safe, page_path(@page),method: :delete,
                    data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
                    <% end %>
                  </div>
  </div>

  <div class="fullwidth-block">
      <div class="container">
      <div class="photo-limit">
        <%= image_tag @page.photo.url, class: "photo" unless @page.photo_file_name.nil?%>
      </div>
      <% unless @page.photo_file_name.nil?%>
      <span style="font-size:80%">Photo: <%=@page.photocredit.to_s %></span>
      <% end %>
      <div class="col-xs-12 col-sm-12">
        <%= @page.content.to_s.html_safe  %>
      </div>
      <div class="col-xs-12">
        <%= link_to @page.datei_file_name, @page.datei.url unless @page.datei_file_name.nil? %>
      </div>
    </div>
  </div>
</main>
