<% ann.sort_by.each do |announcement| %>

    <% if can? :manage, :all%>
		

		<div class="row-fluid text-right">


			<div class="btn-group">
				<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Bearbeiten'.html_safe, edit_announcement_path(announcement), class: "btn btn-primary" %>
				<%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> LÃ¶schen'.html_safe, announcement_path(announcement),
					method: :delete,
                    data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
            </div>
        </div>

    <% end %>
    <div class="row-fluid clearfix panel panel-default">

        <div class="panel-header">
			<h3 class="title-page text-center"><%= announcement.title %></h3>
		</div>

        <div class="panel-body">
			<div class="col-sm-8">
				<%= announcement.message.html_safe %>
			</div>
			<div class="col-sm-4">
				Anzeigen? <%= announcement.public? ? "Ja" : "Nein" %><br>
				Von: <%= announcement.pub_start %><br>
				Bis: <%= announcement.pub_end %><br>
			</div>
		</div>
    </div>
<% end %>
